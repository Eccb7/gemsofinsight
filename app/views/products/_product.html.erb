<%= link_to product_path(product) do %>
  <div id="<%= dom_id product %>" class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
    <%= image_tag product.images.first, class: "w-full h-48 object-cover" if product.images.any? %>
    <div class="p-4">
      <p class="text-lg font-semibold text-gray-800"> <%= product.name %> </p>
      <p class="text-lg text-gray-600">Ksh <%= product.price %> </p>
    </div>
  </div>
<% end %>
