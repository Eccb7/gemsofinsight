<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "text-gray-700 font-bold mb-2 block" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-gray-300 rounded-md w-full px-3 py-2" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "text-gray-700 font-bold mb-2 block" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "border border-gray-300 rounded-md w-full px-3 py-2" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "text-gray-700 font-bold mb-2 block" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border border-gray-300 rounded-md w-full px-3 py-2" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md focus:outline-none" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
