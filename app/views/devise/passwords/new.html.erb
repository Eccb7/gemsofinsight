<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: => resource %>

  <div class="field">
    <%= f.label :email, class: "text-gray-700 font-bold mb-2 block" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-gray-300 rounded-md w-full px-3 py-2" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-md focus:outline-none" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
