<div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
  <!-- Featured Products Section -->
  <h2 class="text-3xl font-extrabold text-green-800 text-center mb-6">Featured Products</h2>
  <div class="relative">
    <!-- Left Arrow -->
    <button class="absolute left-0 top-1/2 transform -translate-y-1/2 bg-white rounded-full p-2 shadow-lg hover:shadow-xl transition duration-300" onclick="scrollLeft()">
      <svg class="h-6 w-6 text-green-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    </button>

    <!-- Product Carousel -->
    <div id="product-carousel" class="flex overflow-x-scroll scrollbar-hide gap-4 bg-white">
      <% @main_products.each do |product| %>
        <%= link_to product_path(product), class: "flex flex-col items-stretch mb-1 border border-sky-200 rounded-lg shadow-md hover:shadow-lg transition-all duration-300 ease-in-out transform hover:scale-105 min-w-[240px] w-60" do %>
          <% if product.images.attached? %>
            <%= image_tag(url_for(product.images.first), class: "w-full h-48 object-contain mb-2 rounded-t-lg") %>
          <% else %>
            <%= image_tag("http://via.placeholder.com/512", class: "w-full h-48 object-cover mb-4 rounded-t-lg") %>
          <% end %>
          <div class="flex flex-col flex-grow p-4 bg-white">
            <h2 class="text-gray-900 font-medium text-lg mb-2 text-left"><%= product.name %></h2>
            <p class="text-green-700 font-bold mb-4 text-left">Ksh <%= number_with_delimiter(product.price, delimiter: ',') %></p>
            <div class="mt-auto flex justify-end">
              <%= button_to 'Add to cart', cart_path(product_id: product.id), method: :post, class: "bg-green-700 text-white px-4 py-2 rounded-lg hover:bg-green-800 transition duration-300" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Right Arrow -->
    <button class="absolute right-0 top-1/2 transform -translate-y-1/2 bg-white rounded-full p-2 shadow-lg hover:shadow-xl transition duration-300" onclick="scrollRight()">
      <svg class="h-6 w-6 text-green-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </button>
  </div>

  <!-- Categories Section -->
  <h2 class="text-3xl font-extrabold text-green-800 text-center mt-12 mb-6">Categories</h2>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <% @main_categories.each do |category| %>
      <%= link_to category_path(category), class: "flex flex-col items-center" do %>
        <% if category.image.present? %>
          <%= image_tag(category.image, class: "w-60 h-60 object-cover mb-4 rounded-full shadow-lg hover:shadow-xl transition duration-300 ease-in-out") %>
        <% else %>
          <%= image_tag("http://via.placeholder.com/256", class: "w-60 h-60 object-cover mb-4 rounded-full shadow-lg hover:shadow-xl transition duration-300 ease-in-out") %>
        <% end %>
        <h2 class="text-gray-900 font-medium text-lg text-center"><%= category.name %></h2>
      <% end %>
    <% end %>
  </div>
</div>

<!-- JavaScript for Scroll -->
<script>
  function scrollLeft() {
    document.getElementById('product-carousel').scrollBy({ left: -240, behavior: 'smooth' });
  }

  function scrollRight() {
    document.getElementById('product-carousel').scrollBy({ left: 240, behavior: 'smooth' });
  }
</script>

<!-- Custom CSS for Scrollbar -->
<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>


