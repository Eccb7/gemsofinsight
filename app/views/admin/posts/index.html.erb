<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Posts</h1>
    <%= link_to "New post", new_admin_gem_blog_category_post_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div class="flex flex-col w-full mt-5">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="py-2 inline-block min-w-full">
        <div class="overflow-x-auto">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-white border-b">
              <tr>
                <th scope="col" class="text-sm font-medium text-sky-800 px-6 py-4 text-left">Title</th>
                <th scope="col" class="text-sm font-medium text-sky-800 px-6 py-4 text-left">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @admin_posts.each do |post| %>
                <tr class="bg-sky-50 border-b">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-sky-800 underline">
                    <%= link_to post.title, admin_gem_blog_category_post_path(@gem_blog_category, post) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-sky-800">
                    <%= link_to 'Edit', edit_admin_gem_blog_category_post_path(@gem_blog_category, post), class: 'text-blue-600' %> |
                    <%= link_to 'Delete', admin_gem_blog_category_post_path(@gem_blog_category, post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-600' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
