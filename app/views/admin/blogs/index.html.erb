<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Blogs" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Blogs</h1>
    <%= link_to "New blog", new_admin_blog_category_blog_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="admin_blogs" class="min-w-full">
    <% @admin_blogs.each do |admin_blog| %>
      <%= render admin_blog %>
      
      
    <% end %>
  </div>
</div>
