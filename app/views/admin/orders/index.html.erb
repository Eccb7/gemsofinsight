<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Orders</h1>
    <%= link_to "New order", new_admin_order_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <h2>Unfulfilled Orders</h2>
  <div class="flex flex-col w-full">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="py-2 inline-block min-w-full">
        <div class="overflow-x-auto">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-white border-b">
              <tr>
                <th scope="col" class="text-sm font-medium text-sky-800 px-6 py-4 text-left">Order ID</th>
                <th scope="col" class="text-sm font-medium text-sky-800 px-6 py-4 text-left">Customer Email</th>
                <th scope="col" class="text-sm font-medium text-sky-800 px-6 py-4 text-left">Address</th>
                <th scope="col" class="text-sm font-medium text-sky-800 px-6 py-4 text-left">Total</th>
              </tr>
            </thead>
            <tbody>
              <% @not_fulfilled_orders.each do |o| %>
                <tr class="bg-sky-50 border-b">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-sky-800 underline">
                    <%= link_to o.id, [:admin, o], class: 'underline' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-sky-800">
                    <%= o.customer_email %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-sky-800">
                    <%= o.address %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-sky-800">
                    <%= o.total %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <div class="pagination">
            <% if @page > 0 %>
              <%= link_to 'Previous', admin_orders_path(page: @page - 1), class: 'button' %>
            <% end %>
            <% if @page < @not_fulfilled_total_pages - 1 %>
              <%= link_to 'Next', admin_orders_path(page: @page + 1), class: 'button' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <h2>Fulfilled Orders</h2>
  <div class="flex flex-col w-full">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="py-2 inline-block min-w-full">
        <div class="overflow-x-auto">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-white border-b">
              <tr>
                <th scope="col" class="text-sm font-medium text-sky-800 px-6 py-4 text-left">Order ID</th>
                <th scope="col" class="text-sm font-medium text-sky-800 px-6 py-4 text-left">Customer Email</th>
                <th scope="col" class="text-sm font-medium text-sky-800 px-6 py-4 text-left">Address</th>
                <th scope="col" class="text-sm font-medium text-sky-800 px-6 py-4 text-left">Total</th>
              </tr>
            </thead>
            <tbody>
              <% @fulfilled_orders.each do |o| %>
                <tr class="bg-sky-50 border-b">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-sky-800 underline">
                    <%= link_to o.id, [:admin, o], class: 'underline' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-sky-800">
                    <%= o.customer_email %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-sky-800">
                    <%= o.address %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-sky-800">
                    <%= o.total %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <div class="pagination">
            <% if @page > 0 %>
              <%= link_to 'Previous', admin_orders_path(page: @page - 1), class: 'button' %>
            <% end %>
            <% if @page < @fulfilled_total_pages - 1 %>
              <%= link_to 'Next', admin_orders_path(page: @page + 1), class: 'button' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
