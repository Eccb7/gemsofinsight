<div class="container mx-auto p-6">
  <h1 class="text-4xl font-bold text-center mb-8">Blog Categories</h1>
  <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    <% @blog_categories.each do |blog_category| %>
      <div class="flex flex-col items-center text-center">
        <%= link_to blog_category_path(blog_category), class: "block w-24 h-24 rounded-full overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300" do %>
          <% if blog_category.image.present? %>
            <%= image_tag blog_category.image, class: "w-full h-full object-cover" %>
          <% else %>
            <%= image_tag 'http://via.placeholder.com/512', class: "w-full h-full object-cover" %>
          <% end %>
        <% end %>
        <h2 class="mt-4 text-lg font-medium text-gray-900"><%= blog_category.name %></h2>
      </div>
    <% end %>
  </div>
</div>